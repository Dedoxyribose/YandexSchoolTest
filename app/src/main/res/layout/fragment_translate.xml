<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:background="@drawable/edit_text_back"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:text="sadasdas sadasdas sadasdas sadasdas sadasdas  sadasdas sadasdas sadasdas sadasdas sadasdas sadasdas sadasdas sadasdas sadasdas sadasdas sadasdas sadasdas sadasdas sadasdas sadasdas"
        android:gravity="top"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/ivMic"
                android:src="@drawable/ic_mic_black_24dp"
                android:tint="@color/colorGrayPic" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp">

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerInParent="true"
                android:id="@+id/pbSpeak" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/ivSpeak"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:tint="@color/colorGrayPic" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/ivClear"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_clear_black_24dp"
        android:tint="#333" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvMainText"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/ivClear"
        android:layout_alignStart="@+id/ivClear"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorBlackText" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvDefs"
        android:layout_below="@+id/tvMainText"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="24dp">

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerInParent="true"
                android:id="@+id/pbSpeakTrsl" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/ivSpeakTrsl"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:tint="@color/colorGrayPic" />
        </RelativeLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/ivFavorite"
            android:layout_marginTop="15dp"
            android:tint="@color/colorGrayPic"
            android:src="@drawable/ic_bookmark_black_24dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/ivShare"
            android:layout_marginTop="15dp"
            android:tint="@color/colorGrayPic"
            android:src="@drawable/ic_share_black_24dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/ivBig"
            android:layout_marginTop="15dp"
            android:tint="@color/colorGrayPic"
            android:src="@drawable/ic_fullscreen_black_24dp" />

    </LinearLayout>

</RelativeLayout>