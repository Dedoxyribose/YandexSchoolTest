<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ru.dedoxyribose.yandexschooltest.widget.EditTextMultilineDone
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:background="@drawable/edit_text_back"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:text=""
        android:gravity="top"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:imeOptions="actionDone"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/ivMic"
                android:src="@drawable/ic_mic_black_24dp"
                android:tint="@color/colorGrayPic" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp">

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerInParent="true"
                android:id="@+id/pbSpeak"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/ivSpeak"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:tint="@color/colorGrayPic" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/ivClear"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_clear_black_24dp"
        android:tint="#333" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/tvMainText"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/ivClear"
        android:layout_alignStart="@+id/ivClear"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorBlackText"
        android:layout_marginRight="40dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvDefs"
        android:layout_below="@+id/tvMainText"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:id="@+id/rlLoading"
        android:background="#9FFF"
        android:visibility="invisible">

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:id="@+id/rlError"
        android:background="#9FFF"
        android:visibility="invisible">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tvErrorTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorBlackText"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tvErrorText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlackText"
            android:layout_below="@+id/tvErrorTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Repeat"
            android:id="@+id/bRepeat"
            android:layout_below="@+id/tvErrorText"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="24dp">

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerInParent="true"
                android:id="@+id/pbSpeakTrsl"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/ivSpeakTrsl"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:tint="@color/colorGrayPic"
                android:visibility="visible" />
        </RelativeLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/ivFavorite"
            android:layout_marginTop="15dp"
            android:tint="@color/colorGrayPic"
            android:src="@drawable/ic_bookmark_black_24dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/ivShare"
            android:layout_marginTop="15dp"
            android:tint="@color/colorGrayPic"
            android:src="@drawable/ic_share_black_24dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/ivBig"
            android:layout_marginTop="15dp"
            android:tint="@color/colorGrayPic"
            android:src="@drawable/ic_fullscreen_black_24dp" />

    </LinearLayout>

</RelativeLayout>